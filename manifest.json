{
    "manifest_version": 2,

    "name": "vk one click share",
    "description": "This extension add to standart button share new = 'Click to share'",
    "version": "2.7",

    "permissions": [
        "tabs", "storage","http://*/*", "https://*/*"
    ],
    "web_accessible_resources":[
        "images/share-icon-min.png",
        "prod/jquery.min.map",
        "images/loading.gif",
        "images/delete.png"
    ],
    "icons": {
        "16": "images/share-icon-16.png",
        "48": "images/share-icon-48.png",
        "128": "images/share-icon-128.png"
    },
    "background":{
        "scripts":["js/background_scripts/authorization.js","js/background_scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [ "http://vk.com/*" ,"https://vk.com/*"],
            "js": ["prod/vk-one-click-share.js"],
            "css" : ["prod/vk-one-click-share.css"]
        }
    ]
}